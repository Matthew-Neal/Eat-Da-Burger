<div class="container">

    <div class="jumbotron">
        {{!-- <div class="row">
        <div class="col-md-12 text-center" id=top-bar> --}}
        {{!-- <img id="burger" src="/public/assets/images/cheeseburger.jpg" alt="Burger"> --}}
        <h1>Eat Da Burger!</h1>
    </div>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}

        {{> burgers/burger-block devoured=false}}


        {{/unless}}
        {{/each}}
    </ul>

    <h2>Devoured Burgers</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}

        {{> burgers/burger-block devoured=true}}

        {{/if}}
        {{/each}}
    </ul>

    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>



        <button type="submit">Add Burger</button>
    </form>
    {{!-- </div> --}}
</div>
</div>